<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Glass" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightSuccess</item>
        <item name="colorSecondaryVariant">@color/success</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- For Android 10 and higher -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="SuccessBtn" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@color/success</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="DangerBtn" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SecondaryBtn" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@color/lightGrey</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>
</resources>